    <boom>
      <name>Sonic Boom</name>
      <path>sonicboom.wav</path>
      <mode>once</mode>  
      <condition>
      <and>
        <greater-than>
          <property>/velocities/mach</property>
          <value> 1.0 </value>
        </greater-than>
        <less-than>
          <property>/position/altitude-ft</property>
          <value> 5000 </value>
        </less-than>
      </and>
    </condition>
      <position>
         <x>2.5</x>
         <y>0</y>
         <z>0</z>
      </position>
      <volume>
        <value>1</value>
      </volume>  
      <max-dist>10000</max-dist>
    </boom>

