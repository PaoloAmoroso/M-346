    <!-- Engine 1 -->
    <engine>
      <name>start1</name>
      <path>starter.wav</path>
      <mode>once</mode>
      <condition>
        <property>/controls/engines/engine[0]/starter</property>
      </condition>
      <volume>
        <property>engines/engine[0]/n2</property>
        <factor> 0.09 </factor>
        <min> 0.3 </min>
        <max> 0.9 </max>
      </volume>
      <pitch>
        <property>engines/engine[0]/n2</property>
