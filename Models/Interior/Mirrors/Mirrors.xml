<PropertyList>
    
    <path>Mirrors.ac</path>
    
	<!-- Glass shader -->
    
    <animation>
        <type>shader</type>
        <shader>chrome</shader>
        <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
        <object-name>Mirrors</object-name>
    </animation>
	
    <!-- Canopy -->

     <animation>
        <type>rotate</type>
        <object-name>Mirrors</object-name>
         <object-name>Bezels</object-name>
         <property>/canopy/position-norm</property>
         <factor>95</factor>
         <axis>
             <x1-m>-0.5467</x1-m>
             <y1-m> 0.4722</y1-m>
             <z1-m> 0.8232</z1-m>
             <x2-m>-2.6963</x2-m>
             <y2-m> 0.4776</y2-m>
             <z2-m> 0.2720</z2-m>
         </axis>
     </animation>
	

	
</PropertyList>