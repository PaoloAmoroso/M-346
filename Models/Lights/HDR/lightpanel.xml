<?xml version="1.0" encoding="ISO-8859-1"?>

 <PropertyList>

  <light>
    <name>LightPanel</name>
    <type>point</type>
    <color>
      <r> 1 </r>
      <g> 1 </g>
      <b> 1 </b>
