<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <light>
    <name>beaconlight</name>
    <type>point</type>
    <color>
      <r> 1 </r>
      <g> 0 </g>
      <b> 0 </b>
    </color>
    <intensity> 15 </intensity>
    <range-m> 25 </range-m>
  </light>

  <animation>
    <type>noshadow</type>
    <object-name>beaconlight</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>beaconlight</object-name>
    <condition>
      <property>controls/lighting/beacon</property>
      <property>/sim/model/lights/beacon/state</property>
    </condition>
  </animation>

</PropertyList>
